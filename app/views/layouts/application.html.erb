<!DOCTYPE html>
<html>
  <head>
    <title>Cafelog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<!--ヘッダー-->
  <body>
    <header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><%= image_tag "cafelog.png", :size => '100x100' %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav mx-auto">
          <% if user_signed_in? %>
           <li><%= link_to "投稿一覧", posts_path, class: 'nav-link active' %></li>
           <li><%= link_to "新規投稿", new_post_path, class: 'nav-link active'  %></li>
           <li><%= link_to "My Page", user_path(current_user), class: 'nav-link active'  %></li>
           <li><%= link_to "Favorites", favorites_user_path(current_user), class: 'nav-link active' %></li>
           <li><%= link_to "Ranking", post_ranking_path(current_user), class: 'nav-link active' %></li>
           <li><%= link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'nav-link active' %></li>
         </ul>
          <% else %>
           <li><%= link_to "Home","/", class: 'nav-link active'  %></li>
           <li><%= link_to "About", about_path, class: 'nav-link active'  %></li>
           <li><%= link_to "新規登録",new_user_registration_path, class: 'nav-link active'  %></li>
           <li><%= link_to "ログイン",new_user_session_path, class: 'nav-link active'  %></li>
          <% end %>
        </div>
        <div class="search-form">
          <% if user_signed_in? %>
           <%= form_with url: search_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, value: @keyword, placeholder: "keyword" %>
            <i class="fas fa-search"></i>
            <%#= f.submit "検索" %>
           <% end %>
          <% end %>
         </div>
      </div>
     </nav>
    </header>
    <%= yield %>

<!--フッター-->
    <footer class=" footer mt-5">
      <p class="text-center pt-3">©2021 Cafelog</p>
    </footer>

  </body>
</html>
