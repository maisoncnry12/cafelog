<h3>User Info Edit</h3>
<%= form_with model:@user, local:true do |f| %>

   <div>Profile Image</label></div>
   <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <div>
   <label for="inputName">Name</label>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
   <label for="inputIntroduction">Introduction</label>
   <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction",placeholder:"紹介文" %>
  </div>
  <div><%= link_to "Back", user_path(current_user) %> <%= f.submit "Update" %></div>
<% end %>
