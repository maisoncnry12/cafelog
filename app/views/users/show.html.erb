<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 mx-2 mx-sm-auto rounded px- my-5">

 <div class ="text-center">
   <h3>User Info</h3>
   <p class="border-bottom"></p>
<!--フォロー機能-->
<%# if current_user.following?(@user) %>
  <%#= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
<%# else %>
  <%#= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
<%# end %>

   <!--プロフィール画像-->
   <div class="my-3">・・・Profile Image・・・<br />
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></div>
   <!--フォロー-->
   <div class="mb-3">Follows :<%= @user.followings.count %> Followes :<%= @user.followers.count %></div>
   <!--名前-->
   <div class="mb-3">・・・・Name・・・・<br />
   <%= @user.name %></div>
   <!--紹介文-->
   <div class="mb-4">・・・Introduction・・・<br />
   <%= @user.introduction %></div>

   <!--ログインしているユーザーが編集-->
   <% if @user == current_user %>
   <div class=mb-5><%= link_to "Edit", edit_user_path, class: "btn btn-outline-secondary"%> </div>
   <% end %>

   <div><%= link_to "Home", "/" ,class: "fas fa-home" %></div>
  </div>

    </div>
  </div>
</div>