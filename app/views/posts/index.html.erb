<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 mx-2 mx-sm-auto rounded px- my-5">

<h3>投稿一覧</h3>
<table class= 'table' >
<% @posts.each do |post| %>

  <!--プロフィール-->
  <tr><td style="border:none;"><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %> <%= post.user.name %></td></tr>
  <!--フォロー機能-->
   <%# if current_user.following?(@user) %>
   <%#= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
   <%# else %>
   <%#= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
   <%# end %>

  <!--投稿画像-->

  <tr><td style="border:none;"><%= attachment_image_tag post, :post_image, :fill, 500, 500 %></td></tr>
  <!--いいね-->
  <tr id="post_<%= post.id %>">
  <td class="favorite-btn" style="border:none;"><%= render "favorites/favorite-btn", post: post %></td>
  </tr>
  <!--ショップ名-->
  <tr><td style="border:none;">Shop Name：<%= post.shop_name %></td></tr>
  <!--<p>Area : <%#= post.area_id %></p>-->

  <!--説明-->
  <tr><td style="border:none;">Text：<%= post.body %></td></tr>

  <!--評価-->

         <tr><td style="border:none;" id="star-rate-<%= post.id %>">Recommend : </td></tr>
          <script>
          $('#star-rate-<%= post.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= post.rate %>,
          });
          </script>
        <!--/星評価-->

  <!--コメント-->
  <!--<table class="comments">-->
  <!--      <%#= render 'comments/index', post: post %>-->
  <!--    </table>-->
  <tr><td style="border:none;">
    Comments :<%= form_with model:[post, @comment] do |f| %>
    <%= f.text_area :comment, size:"50x5",placeholder: "コメント" %>
    <%= f.submit "Post" %>
    <% end %>
  </td></tr>
     <%# if @comment.user == current_user %>
     <!--<div>-->
      <%#= link_to "削除", post_comment_path(post.id), method: :delete %>
     <!--</div>-->
     <%# end %>

  <!--<p>POST</p>-->
 <tr><td style="border:none;">
  <% if post.user == current_user %>
   <%= link_to "Edit", edit_post_path(post.id) %>
  <% end %>
  <% if post.user == current_user %>
   <%= link_to "Destroy", post_path(post.id), method: :delete %>
  <% end %>
 </td></tr>

 <!--投稿ごとに区切り-->
<td></td>

<% end %>
</table>

     </div>
   </div>
 </div>
