<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1 mx-2 mx-sm-auto rounded px- my-5">
            <h3>Cafe</h3>
            <p class="border-bottom"></p>
            <table class="table">
                <% @posts.each do |post| %>
                    <!--プロフィール-->
                    <p><%= image_tag('no_image.jpg') %><%= post.user.name %></p>

                    <%# if current_user.following?(@user) %>
                    <%#= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
                    <%# else %>
                    <%#= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
                    <%# end %>

                    <!--投稿画像-->
                    <tr>
                      <td style="border:none;">
                        <%= attachment_image_tag post, :post_image, :fill, 500, 500 %>
                      </td>
                    </tr>
                  <!--いいね-->
                  <!--投稿日時-->
                    <tr>
                        <td style="border:none;">
                            <%= post.created_at.strftime('%Y/%m/%d')%>
                        </td>
                    </tr>
              <!--投稿画像-->
                    <tr>
                        <td style="border:none;">
                        <%= attachment_image_tag post, :post_image, :fill, 500, 500 %>
                        </td>
                    </tr>
              <!--いいね-->
                    <tr id="post_<%= post.id %>">
                        <td class="favorite-btn" style="border:none;">
                            <%= render "favorites/favorite-btn", post: post %>
                        </td>
                    </tr>

                    <!--ショップ名-->
                    <tr><td style="border:none;">Shop Name：<%= post.shop_name %></td></tr>
                    <!--エリア-->
                    <!--<tr><td>Area : <%#= post.area_id %></td></tr>-->

                    <!--説明-->
                    <tr><td style="border:none;">Text：<%= post.body %></td></tr>

                    <tr><td style="border:none;">Area : <%= post.area_id %></td></tr>

                    <!--評価-->

                    <tr><td style="border:none;" id="star-rate-<%= post.id %>">Recommend : </td></tr>

                    <!--ショップ名-->
                    <p>Cafe's Name：<%= post.shop_name %></p>
                    <!--<p>Area : <%#= post.area_id %></p>-->

                    <!--説明-->
                    <p>Text：<%= post.body %></p>
                     <!--評価-->
                    <div id="star-rate-<%= post.id %>">Recommend : </div>
                    <script>
                    $('#star-rate-<%= post.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= post.rate %>,
                    });
                    </script>
                    <!--/星評価-->

                    <!--コメント-->
                    <tr><td style="border:none;">
                    <%= link_to "Comments", post_path(post.id) %>
                    <%= form_with model:[post, @comment] do |f| %>
                    <%= f.text_area :comment, size:"50x5",placeholder: "コメントを書いてください" %>
                    <%= f.submit "Post", class: "btn btn-sm btn-outline-danger"  %>
                    <% end %>
                    </td></tr>

                    <tr><td style="border:none;">
                    <% if post.user == current_user %>
                     <%= link_to "Edit", edit_post_path(post.id), class: "fas fa-edit text-dark" %><br />
                    <% end %>
                    <% if post.user == current_user %>
                     <%= link_to "Destroy", post_path(post.id), method: :delete, data: {confirm: "削除しますか？"}, class: "fas fa-trash-alt text-dark" %>
                    <% end %>
                    </td></tr>
                    <!--投稿ごとに区切り-->
                    <td></td>
                <% end %>
            </table>
            <div><%= link_to "Home", "/" ,class: "fas fa-home" %></div>
        </div>
    </div>
</div>