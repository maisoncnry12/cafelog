<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 mx-2 mx-sm-auto rounded px- my-5">
<!--テキスト全体を中央寄せ-->
 <div class ="text-center">
    <h3>新規投稿</h3>
    <%= form_with model: @post, local:true do |f| %>
    <div>Photo : <%= f.attachment_field :post_image %></div>
    <div>Cafe's Name</div>
    <%= f.text_field :shop_name %>
    <div>Text</div>
    <%= f.text_area :body %>

<!--<div>Area</div>-->
<%#= f.text_field :area_id %>

<!--星の評価-->
<!--<div>Recommend</div>-->
 <div class="form-group" id="star">
    <%= f.label :rate,'Recommend', class:' col-form-label' %>
    <%= f.hidden_field :rate, id: :review_star %>
 </div>

   <!-- 評価javascript -->
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'post[rate]',
    half: true,
  });
  </script>

<div><%= f.submit 'POST', class: "btn btn-secondary" %></div>
<div><%= link_to "Back", "/"  %></div>
<% end %>
</div>

    </div>
  </div>
</div>